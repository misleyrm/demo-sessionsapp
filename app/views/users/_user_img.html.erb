<% msinactive = "" %>
<% if user.invitations.find_by_list_id(current_list.id) %>
  <% msinactive = "ms-inactive" if !user.invitations.find_by_list_id(current_list.id).active %>
<% end %>
<%= content_tag :div, class: "chip user-img #{msinactive}", id: "#{user.id}" do %>
<!-- <div class="chip user-img " style="background: none;" id="<%= user.id%>"> -->
        <% if !user.avatar.nil? %>
           <%= image_tag(user.avatar(:medium), class: 'circle', alt: "#{user.first_name}", title:"#{user.first_name}") %>
        <% else %>
           <span class="user-initial circle"><%= initials(user.id) %></span>
        <% end %>
<!-- </div> -->
<% end %>
