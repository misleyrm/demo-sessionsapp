<div id="list_user_<%= user.id%>" data-user-id = "<%= user.id%>" class="col s12 m12 l12 xl9">
    <%= render :partial => "users/user_img", :locals =>{ :user => user } %>
    <%= content_tag :div, class: "ms-user-tasks #{permitted_user?(user.id) ? 'permitted' : 'no-permitted'}" do%>
        <div class="new-task">
          <%= render partial: 'tasks/form', :locals =>{ :user => user }   %>
        </div>
        <!-- INCOMPLETE TASKS -->
        <div class="tasks table-of-task incomplete_tasks" id="incomplete_tasks_<%= user.id%>" data-url="<%= sort_list_tasks_path(list,'user_id': user.id)%>" >
          <% for task in user.incompleted_tasks_by_date(list,current_date) %>
            <%= render :partial => "tasks/task", :locals =>{ :user => user, :task => task, :list => list, :currentList => list} %>
          <% end %>
        </div>
        <div class="divider <%= (user.completed_tasks_by_date(list,current_date).count == 0) ? 'no-active' : '' %>"></div>
        <!-- COMPLETED TASKS -->
        <div class="tasks table-of-task complete_tasks" id="complete_tasks_<%= user.id%>">
           <%= render :partial => "users/completed_task", :locals =>{ :user => user, :list => list,:current_date => current_date} %>
        </div>
    <% end%>
    <div class="clearfix"></div>
    <div class="divider50"></div>
</div>

