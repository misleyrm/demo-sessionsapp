<div class="user" id="user-new">
  <div class="row">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-title">
          <div class="row">
            <div class="col s12 m9"><h1></h1></div>
            <div class="col s12 m3"><i class="material-icons large">portrait</i></div>
          </div>
        </div>
        <div class="card-content">
          <table>
            <thead>
              <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Role</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>

              <tr>
                <td><%= current_user.first_name %><%= current_user.id %></td>
                <td><%= current_user.last_name %></td>
                <%= form_for current_user do |u|%>
                 <td data='<%= current_user.id %>' id='roleUpdate' class='selected_role'>
                  <div class="input-field" >

                  </div>
                </td>
                <td><%= u.submit 'Save' %></td>
                <td><%= link_to 'Edit', edit_user_path(current_user) %></td>
                <td><%= link_to 'Destroy', current_user, method: :delete %></td>

              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="card-action">
          <div class="row center-align">
            <div class="col s12 m4">
              <%= link_to 'Back', sessions_path %>
            </div>
            <div class="col s12 m4">
            </div>
            <div class="col s12 m4">
            </div>
            <div class="col s12 m12">
              <% if current_user %>
              Signed in as <%= current_user.first_name.capitalize %> | <%= link_to "Logout", '/logout' %>
              <% else %>
              <% login_path %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
