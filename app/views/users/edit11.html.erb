<%= form_for(@user, :remote => true) do |f| %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="ms-tabsSetting-content">
      <%= flash[:message] %>
      <div id="profile">
        <%= render 'users/personal_info' %>
      </div>
      <div id="avatar" class="ms-tabsSetting-content">
          <%= render 'users/avatar' %>
      </div>
      <div id="security" class="ms-tabsSetting-content">
          <%= render 'users/security' %>
      </div>
    </div>
<% end %>
