<%= form_for @user ,validate: true, remote: true do |f| %>
    <%= render :partial => 'shared/error_messages', :locals => {:object => @user} %>
    <div class="row">
        <div id="imagecrop"><img src="" /></div>
        <div class="col s12">
            <%#= f.hidden_field :current_step, :value => "personal",:id => "current_step_personal" %>
            <%= f.hidden_field :current_step, :value => "image",:id => "current_step_avatar" %>
            <%= content_tag(:div, :class=>["valign-wrapper", "ms-upload-avatar"], :style=> "background-image: url(#{(!@user.image.blank?)? @user.image_url(:thumb) : ''})", :data=>{"url": "#{updateAvatar_user_path(@user)}", "url-crop": "#{crop_user_path(@user)}"},id: "preview") do %>
                <%= f.file_field :image %>
                <label for="user_image">
                  <div class="mousehover <%= (current_user.image.nil?)? 'hover': 'active' %> ">
                    <span class="circle-icon valign-wrapper">
                        <%= image_tag(public_path('assets/icons/CreateList/Picture/Selected.svg')) %>
                    </span>
                  </div>
                </label>
              <% end%>

              <div class="input-field capitalize ">
                  <span class="prefix valign-wrapper">
                      <%= image_tag(public_path('assets/members.svg'), class: 'prefix') %>
                  </span>
                  <%= f.text_field :first_name, class: 'validate'%>
                  <%= f.label :first_name, id: 'icon_prefix', class: 'active' %>
              </div>
              <div class="input-field capitalize">
                  <span class="prefix valign-wrapper">
                      <%= image_tag(public_path('assets/members.svg'), class: 'prefix') %>
                  </span>
                  <%= f.text_field :last_name %>
                  <%= f.label :last_name, id: 'icon_prefix',class: 'active'  %>
              </div>
              <!-- Change Email -->
              <ul class="collapsible ms-accordion-section" data-collapsible="accordion" id="change_email">
                <li>
                    <div class="collapsible-header">
                      <div class="ms-form-title input-field capitalize">
                        <span class="prefix valign-wrapper">
                            <%= image_tag(public_path('assets/emailBlue.svg'), class: 'prefix') %>
                        </span>
                        <%= f.text_field :email, disabled: true%>
                        <%= label_tag 'email', 'E-EMAIL', class: 'active', id: 'icon_prefix'  %>
                        <i class="material-icons right ms-open-button">keyboard_arrow_left</i>
                      </div>
                    </div>
                    <div class="collapsible-body" id="user_email_change">
                        <div id="errors">
                           <%= render partial: "shared/flash_messages", locals: {user: @user} %>
                        </div>
                        <%#= f.hidden_field :id, :value => @user.id %>

                        <div class="input-field">
                          <span class="prefix valign-wrapper">
                              <%= image_tag(public_path('assets/emailBlue.svg'), class: 'prefix') %>
                          </span>
                          <%= f.email_field :new_email, placeholder: 'New email address'%>
                        </div>
                        <div class="input-field">
                          <span class="prefix valign-wrapper">
                              <%= image_tag(public_path('assets/emailBlue.svg'), class: 'prefix') %>
                          </span>
                          <%= f.email_field :new_email_confirmation, placeholder: 'Confirmation new email address '%>
                        </div>
                        <div class="input-field">
                          <span class="prefix valign-wrapper">
                              <%= image_tag(public_path('assets/password.svg'), class: 'prefix') %>
                          </span>
                          <%= password_field_tag :password, '', placeholder: 'Current password (for security reason)' %>
                        </div>
                  </div>
                </li>
              </ul>
              <!-- End of Change Email -->
              <div class="input-field center-align">
                 <a class="waves-effect waves-light btn-large col s12 submit"><%= f.submit "Save Updates" %></a>
             </div>
        </div>
  </div>
<% end %>
