

<%= form_for(@user, multipart: true) do |f| %>
<%= f.hidden_field :current_step, :value => "avatar" %>
<div class="valign-wrapper ms-upload-avatar left" style="<% if (!current_user.nil?) %>background-image: url('<%= current_user.avatar('thumb') %>');<% end %>">
  <%= f.file_field :avatar %>
  <label for="user_avatar">
    <div class="mousehover <%= (current_user.nil?)? 'hover': 'active' %> ">
      <i class="material-icons">camera_alt</i><%= (current_user.nil?)? "Upload": "Change" %> your Avatar
    </div>
  </label>
</div>
<div class="valign-wrapper ms-update-avatar">
  <div>
    <label for="btn-avatar">YOUR AVATAR</label>
    <div class="input-field center-align">
      <a class="waves-effect waves-light su-btn btn-flat submit"></a>
    </div>
  </div>
</div>

<div class="clearfix"></div>

    <div class="section ms-form">
        <%= f.hidden_field :current_step, :value => "personal" %>
        <div class="input-field capitalize">
          <i class="material-icons prefix">person_outline</i>
          <%= f.text_field :first_name %>
          <%= f.label :first_name, id: 'icon_prefix',class:'active' %>
        </div>
        <div class="input-field capitalize">
          <i class="material-icons prefix">person_outline</i>
          <%= f.text_field :last_name %>
          <%= f.label :last_name, id: 'icon_prefix',class:'active' %>
        </div>
        <div class="input-field">
          <i class="material-icons prefix">email</i>
          <%= f.text_field :email %>
          <%= f.label :email, id: 'icon_prefix',class:'active' %>
        </div>
        <div class="input-field center-align">
          <a class="waves-effect waves-light btn-large row submit"><%= f.submit "Settings" %></a>
       </div>
     </div>
<% end%>
