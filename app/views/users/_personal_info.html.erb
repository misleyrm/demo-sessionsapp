<%= form_for(@user, url: 'users/updateAvatar', method: :patch, :html=>{id: "user-edit-avatar",remote: true, multipart: true, class: "edit-avatar"}) do |f| %>
    <%= f.hidden_field :current_step, :value => "avatar" %>
    <div class="valign-wrapper ms-upload-avatar left" style="<% if (!current_user.nil?) %>background-image: url('<%= current_user.avatar('thumb') %>');<% end %>">
      <%= f.file_field :avatar %>
      <label for="user_avatar">
        <div class="mousehover <%= (current_user.nil?)? 'hover': 'active' %> ">
          <i class="material-icons">camera_alt</i><%= (current_user.nil?)? "Upload": "Change" %> your Avatar
        </div>
      </label>
    </div>
    <div class="valign-wrapper ms-update-avatar">
      <div>
        <label for="btn-avatar">YOUR AVATAR</label>
        <div class="input-field center-align">
          <a class="waves-effect waves-light su-btn btn-flat submit" id="btn-user-avatar-upload">Upload</a>
        </div>
      </div>
    </div>
<% end%>

<div class="clearfix"></div>
<%= form_for(@user, :html=>{:id=>"user_edit_pinfo", :multipart=> true, :remote => true}) do |g| %>
    <div class="section ms-form">
        <%= g.hidden_field :current_step, :value => "personal" %>
        <div class="input-field capitalize">
          <i class="material-icons prefix">person_outline</i>
          <%= g.text_field :first_name %>
          <%= g.label :first_name, id: 'icon_prefix',class:'active' %>
        </div>
        <div class="input-field capitalize">
          <i class="material-icons prefix">person_outline</i>
          <%= g.text_field :last_name %>
          <%= g.label :last_name, id: 'icon_prefix',class:'active' %>
        </div>
          <ul class="collapsible ms-accordion-section" data-collapsible="accordion" id="change_email">
            <li>
              <div class="collapsible-header"><i class="material-icons prefix">email</i>E-MAIL<i class="material-icons right">keyboard_arrow_right</i>
                <p>Your email address is <span class="ms-strong"><%= @user.email%></span></p>
              </div>
              <div class="collapsible-body" id="user_email_change">
                    <%= g.hidden_field :id, :value => @user.id %>
                    <div class="input-field">
                      <%= g.text_field :new_email, placeholder: 'New Email Address ' %>
                    </div>
                    <div class="input-field">
                      <%= g.text_field :new_email_confirmation, placeholder: 'Confirmation of new Email address ' %>
                    </div>
                    <div class="input-field">
                      <%= g.password_field :current_password, placeholder: 'Current Password' %>
                    </div>
                    <div class="input-field left-align">
                        <%= link_to  "", data: { src: updateEmail_user_path },id: "btn-user-email-change",class: "waves-effect waves-light btn-medium lowercase su-btn btn-flat submit white", remote: true, method: :patch do %>
                             Update Email
                        <% end %>
                   </div>
              </div>
            </li>
          </ul>

        <div class="input-field center-align">
          <a class="waves-effect waves-light btn-large submit"><%= g.submit "Settings" %></a>
       </div>
     </div>
<% end%>
