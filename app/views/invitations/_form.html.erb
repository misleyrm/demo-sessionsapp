
<%= form_for([@list, @invitation],:remote => true,:html => {:"data-behavior" => 'modal-form'}) do |f| %>
  <%= f.hidden_field :list_id, :value => @list.id %>
  <div class="input-field col">
    <%= f.text_field :recipient_email, id:"recipient_email" %>
    <label for="recipient_email">Recipient's email address</label>
  </div>
  <div class="row">
      <div class="col s6 input-field center-align">
          <%= link_to 'Back', lists_path, remote: true,:class => "waves-effect waves-light btn-medium submit lowercase su-btn btn-flat col s12 white" %>
      </div>
      <div class="col s6 input-field center-align">
          <a class="waves-effect waves-light btn-medium submit lowercase su-btn btn-flat col s12 white"><%= f.submit "Invite"%></a>
      </div>
  </div>

<% end %>
