<div data-list-id = "<%= @list.id%>">
    <div class="center row">
      <div class="col s12">
        <% unless (list.all_tasks?) %>
            <div class="share-icons">
                <div class="row list-collaboration-users">
                    <div class="right">
                        <ul id="collaboration-users">
                          <% if has_collaborations?(list) %>
                              <% if (!current_user.owner?(list) && (!list.owner.nil?)) %>
                                 <%= render partial: "lists/collaboration_user", locals: {collaboration_user: list.owner} %>
                              <% end %>
                              <% if  list.collaboration_users.where(['user_id != ?', current_user.id]).count > 0 %>
                                 <%= render partial: "lists/collaboration_user", collection: list.collaboration_users.where(['user_id != ?', current_user.id]) %>
                              <% end %>
                          <% end %>
                          <% if (current_user.owner?(list)) %>
                              <li class="chip circle ms-text-green ms-add">
                                <%= link_to new_list_invitation_path(list),id: 'new_invitation_link',class:"tooltipped", remote: true, data: {behavior: 'modal', tooltip: 'Invite a new people'} do%>
                                    <i class="material-icons add-user">add</i>
                                <% end %>
                              </li>
                          <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        <% end %>
      </div>
    </div>
     <div id="list-users">
          <%= render partial: "users/list_user", locals: {user: current_user, list: list} %>
      </div>
      <!-- <div id="show_collaboration_users" class="col s12">
      </div> -->
</div>
