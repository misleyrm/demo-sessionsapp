<%= form_for( @list, url: {action: "create"},remote: true, method: "POST") do |f| %>
      <!-- <input type='hidden' name='_method' value="<%=(@list.new_record?) ? "post" : "put"%>"> -->
      <%= hidden_field_tag 'id', "#{@list.id}"%>
      <%= content_tag "div", id: "error_message_list" do %>
         <%= render :partial => 'shared/error_messages', :locals => {:object => @list} %>
      <% end %>
      <div class="row">
          <div id="imagecrop_list"><img src="" /></div>
          <div class="col s12">
                <%#= "#{crop_list_path(@list)}"%>
              <%= content_tag(:div, :class=>["valign-wrapper", "ms-upload-avatar"],:data=>{:url=> "#{updateAvatar_list_path(@list)}", :url_crop =>"#{crop_list_path(@list)}"},id: "preview") do %>
                  <%= f.file_field :image %>
                  <label for="list_image">
                      <div class="mousehover hover empty">
                          <span class="circle-icon valign-wrapper create">
                              <%= image_tag(public_path('assets/createList.svg')) %>
                          </span>
                          <span class="circle-icon valign-wrapper hover">
                              <%= image_tag(public_path('assets/createListHover.svg')) %>
                          </span>
                      </div>
                  </label>
              <% end%>
          </div>
      </div>

      <div class="col s12">
          <div class="input-field">
              <%= f.text_field :name ,id: "list_name"%>
              <%= f.label :name%>
          </div>
      </div>
      <div class="divider col s12"></div>
      <div class="col s12">
          <div class="input-field">
              <%= f.text_area :description,class:'materialize-textarea', id: 'list_description' %>
              <%= f.label :description, class: (@list.new_record?)? '': 'active' %>
          </div>
     </div>
     <div class="divider col s12"></div>

    <div class="row">
        <div class="col s6">
          <div class="input-field center-align">
            <a href="#!" class="modal-action waves-effect waves-light btn btn-medium lowercase su-btn btn-flat submit col s12" >Cancel</a>
          </div>
        </div>
        <div class="col s6">
          <div class="input-field center-align">
            <a class="waves-effect waves-light btn btn-medium submit su-btn btn-flat lowercase col s12" id="btn-list-form-submit"><%= f.submit "Create"  %></a>
          </div>
        </div>
      </div>
<% end %>
