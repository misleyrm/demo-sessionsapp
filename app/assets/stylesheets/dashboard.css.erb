/* NAVEGATION BAR */
.navigationbar{
  transition: transform .3s ease,width .3s ease;
}

.navigationbar{
    position: fixed;
    top: 140px;
    left: 0;
    bottom: 0;
    width: 260px;
    font-size: 1rem;
    z-index: 9;
    transform: translate3d(0,0,0);
    height: auto;

  }

.navigationbar ul {
    margin: 0;
    padding: 0;
}

.navigationbar .nano {

    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.navigationbar .nano>.nano-content {

    position: absolute;
    overflow: scroll;
    overflow-x: hidden;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

.navigationbar .nano-content>div.side-nav {
      width: 100%;
      max-width: 280px;
}

.side-nav{
  width: 260px;
  -webkit-transition: .3s ease all;
  -o-transition: .3s ease all;
  -moz-transition: .3s ease all;
  transition: .3s ease all;
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  backface-visibility: hidden;

}

.side-nav ul.user-lists li > a:hover {
    background-color: rgba(0, 0, 0, 0.05);
}

.side-nav ul#bar-user-informations li > a:hover {
    background: none!important;
}

.side-nav ul.user-lists li > a,
.side-nav ul#bar-user-informations li > a {
   padding: 0 1rem;
}



.navigationbar .nano-content>ul li .divider{
  margin: 0px;
}
.navigationbar div.bar-user-email,
.user-info>a .bar-user-email{
  font-size: .75rem;
}
.navigationbar .nano-content>ul li a .bar-user-email i,
.user-info a .bar-user-email i{
  margin: 0 0 0 5px;
  vertical-align: middle;
  width: 1.4em;
  display: inline-block;
  font-size: .5rem;
}


.navigationbar .nano-content>ul li a .chip{
  margin-bottom: 0;
}
