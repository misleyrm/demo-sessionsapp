function mySortable(elem){
 if (elem.is(':visible')){
  elem.sortable({
    update: function(e,ui){
      // send the updated order via ajax
       $.ajax({
           type: "PUT",
           url: $(this).data("url"),
           data: $(this).sortable('serialize'),
       });
    }
  });
  }
}


function myDroppable(elem){
    var disabled = elem.hasClass("active")? true : false;
    elem.droppable({
        hoverClass: 'ui-state-active',
        tolerance: 'pointer',
        disabled: disabled,
        accept: function (event, ui) {
            return true;
        },
        drop: function (event, ui) {
            var obj;
            if ($(ui.helper).hasClass('draggable')) {
                // ui.draggable.css( "color", "red" )
                // console.log(ui.draggable);
                var taskId = ui.draggable.data("task-id"),
                    currentlistId = ui.draggable.parents("div#current-list").data("list-id"),
                    listId = elem.data("nav-list-id"),
                    url = "/tasks/"+ taskId +"/changelist?currentList="+ currentlistId +"&list_id="+listId;
                // console.log(url);
                // ui.draggable.remove();
                $.ajax({
                    type: "patch",
                    url: url,
                    data: "",
                    success: function(){
                      Materialize.toast("Task changed to the new list successfully", 4000);
                    }
                });
            }
        }
    })
}
