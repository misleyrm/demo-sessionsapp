function mySortable(elem){
 if (elem.is(':visible')){
  elem.sortable({
    update: function(e,ui){
      // send the updated order via ajax
       $.ajax({
           type: "PUT",
           url: $(this).data("url"),
           data: $(this).sortable('serialize'),
       });
    }
  });
  }
}
